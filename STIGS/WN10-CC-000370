# Registry path for PIN convenience logon setting
$path = "HKLM:\SOFTWARE\Policies\Microsoft\Windows\System"

# Ensure the registry path exists before setting the property
if(!(Test-Path $path)) { 
    New-Item -Path $path -Force | Out-Null 
}

# WN10-CC-000370: Disable the convenience PIN login (Value 0)
Set-ItemProperty -Path $path -Name "AllowDomainPINLogon" -Value
